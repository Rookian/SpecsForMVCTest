@using MvcContrib.UI.Grid
@using MvcContrib.UI.Pager
@model MvcApplication1.Models.ViewModel

@Html.Grid(Model.List).Columns(c =>
{
    c.For(x => x.Id);
    c.For(x => x.Name);
})

@Html.Pager(Model.List).Link(currentPage => Url.Action("Index", new
    {
        page = currentPage,
        Model.SearchFilter.Name
    }))


@using (Html.BeginForm("About", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.SearchFilter.Name)
    <input type="submit" value="Click"/>
}


@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.SearchFilter.Name)
    <input type="submit" value="Click"/>
}

